}
/* UTILITIES */
[data-animation] {
  opacity: 0;
}
[data-animation="fade-in"].is-animated {
  animation: fade-in .333s ease-in-out;
  opacity: 1;
}
[data-animation="slide-in"].is-animated {
  animation: slide-in .333s ease-in-out forwards;
  opacity: 1;
}
[data-animation="zoom-in"].is-animated {
  animation: zoom-in .333s ease-in;
  opacity: 1;
}
[data-animation="slide-up"].is-animated {
  animation: slide-up .15s ease-in;
  opacity: 1;
}
@keyframes fade-in {
  from {
    opacity: 0;
  }

  to {
    transform: translate3d(0, 0, 0);
  }
}
@keyframes slide-up {
  from {
    opacity: 0;
    transform: translate3d(0, 1em, 0);
  }

  to {
    opacity: 1;
    transform: translate3d(0, 0, 0);
  }
}
@keyframes slide-in {
  from {
    opacity: 0;
    transform: translate3d(-100%, 0, 0);
  }

  to {
    opacity: 1;
    transform: translate3d(0, 0, 0);
  }
}
@keyframes zoom-in {
  from {
    opacity: 0;
    transform: scale3d(.95, .95, 1);
    transform-origin: bottom center;
  }

  to {
    opacity: 1;
    transform: scale3d(1, 1, 1);
  }
}
/*
CLICKABLE
---------
Enable or disable clickability
*/
.u-is-not-clickable {
  pointer-events: none;
}
.u-is-clickable {
  pointer-events: auto !important;
}
.u-margin-bottom-none {
  margin-bottom: 0 !important;
}
.u-margin-bottom {
  margin-bottom: var(--spacing);
}
.u-margin-top-none {
  margin-top: 0 !important;
}
.u-margin-top {
  margin-top: var(--spacing);
}
.u-margin-top-m {
  margin-top: var(--spacing-m);
}
.u-screen-reader-only {
  border: 0;
  clip: rect(0, 0, 0, 0);
  height: 1px;
  margin: -1px;
  overflow: hidden;
  padding: 0;
  position: absolute;
  width: 1px;
}
.u-text-italic {
  font-style: italic !important;
}